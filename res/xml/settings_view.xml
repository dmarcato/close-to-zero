<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
  
	<ListPreference
		android:title="@string/size"
		android:summary="@string/size_summary"
		android:key="size"
		android:defaultValue="5"
		android:entries="@array/list_sizes"
		android:entryValues="@array/list_sizes_val" />

	<PreferenceScreen
		android:key="p1"
		android:title="@string/p1"
		android:summary="@string/p1_summary">
		
		<ListPreference
			android:title="@string/player_type"
			android:summary="@string/player_type_summary"
			android:key="p1Cpu"
			android:defaultValue="human"
			android:entries="@array/list_player_type"
			android:entryValues="@array/list_player_type_val" />
		
		<ListPreference
			android:title="@string/player_color"
			android:summary="@string/player_color_summary"
			android:key="p1Color"
			android:defaultValue="green"
			android:entries="@array/list_player_color"
			android:entryValues="@array/list_player_color_val" />
		
	</PreferenceScreen>
		
	<PreferenceScreen
		android:key="p2"
		android:title="@string/p2"
		android:summary="@string/p2_summary">
		
		<ListPreference
			android:title="@string/player_type"
			android:summary="@string/player_type_summary"
			android:key="p2Cpu"
			android:defaultValue="human"
			android:entries="@array/list_player_type"
			android:entryValues="@array/list_player_type_val" />
			
		<ListPreference
			android:title="@string/player_color"
			android:summary="@string/player_color_summary"
			android:key="p2Color"
			android:defaultValue="yellow"
			android:entries="@array/list_player_color"
			android:entryValues="@array/list_player_color_val" />
		
	</PreferenceScreen>
	
	<ListPreference
		android:title="@string/cpu_level"
		android:summary="@string/cpu_level_summary"
		android:key="cpuLevel"
		android:defaultValue="1"
		android:entries="@array/list_cpu_level"
		android:entryValues="@array/list_cpu_level_val" />
		
	<CheckBoxPreference
		android:title="@string/partial_sum"
		android:defaultValue="true"
		android:summary="@string/partial_sum_summary"
		android:key="partialSum" />
	
	<CheckBoxPreference
		android:title="@string/vibration"
		android:defaultValue="true"
		android:summary="@string/vibration_summary"
		android:key="canVibrate" />
	
</PreferenceScreen>
